---
import Layout from './Layout.astro'
interface Props { heading?: string }
const { heading = 'Basics' } = Astro.props as Props
---

<Layout>
  <div style="display:flex; gap:2rem; align-items:flex-start;">
    <aside style="min-width:240px; position:sticky; top:1rem;">
      <nav aria-label={heading}>
        <h3 style="margin:0 0 .5rem;">{heading}</h3>
        <ul>
          <li><a href="/basics/introduction/overview">Overview</a></li>
          <li><a href="/basics/variables/intro">Variable Intro</a></li>
          <li><a href="/basics/variables/scope">Variable Scope</a></li>
        </ul>
      </nav>
    </aside>
    <main style="flex:1; min-width:0;">
      <slot />
    </main>
  </div>
</Layout>
