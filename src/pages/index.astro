---
import MainLayout from '@layouts/MainLayout.astro'
import Card from '@components/Card.astro'
import Hero from '@components/Hero.astro'

import { docsConfig } from '@lib/docs/config'

const base = docsConfig.basePath ?? import.meta.env.BASE_URL
const baseWithTrailingSlash = base.endsWith('/') ? base : base + '/'

const basicsHref = `${baseWithTrailingSlash}basics/introduction/overview`
const tocHref = `${baseWithTrailingSlash}toc-doc/intro`
---

<MainLayout hideSearch>
  <section class="site-container p-6">
    <div class="flex justify-center items-center mt-10 mb-20">
      <Hero rotate="-2deg" />
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-6">
      <Card href={basicsHref} astroPrefetch={false}>
        <h2 class="text-xl font-semibold">Basics</h2>
        <p class="text-sm text-sd-muted">
          Start with the language fundamentals.
        </p>
      </Card>
      <Card href={tocHref} astroPrefetch={false}>
        <h2 class="text-xl font-semibold">Tocâ€‘Doc</h2>
        <p class="text-sm text-sd-muted">
          Build doc sites with different topics.
        </p>
      </Card>
    </div>
  </section>
</MainLayout>
